<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/frodoperfil"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="seniorfrodoomg"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recorro el mundo con mis amigos mientras fluye mi pasión por la escritura:). #HobbitLife. #ComarcaIND"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addTripButton"
            android:text="Añadir viaje"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/MisViajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Viajes"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>